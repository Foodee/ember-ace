{{page-title 'Dummy'}}

<h2 id='title'>Welcome to Ember</h2>

<EmberAce
  @lines={{10}}
  @value={{this.value}}
  @highlightActiveLine={{this.highlightActiveLine}}
  @showPrintMargin={{this.showPrintMargin}}
  @readOnly={{this.readOnly}}
  @tabSize={{this.tabSize}}
  @useSoftTabs={{this.useSoftTabs}}
  @useWrapMode={{this.useWrapMode}}
  @showInvisibles={{this.showInvisibles}}
  @showGutter={{this.showGutter}}
  @theme={{this.theme}}
  @overlays={{this.overlays}}
  @update={{fn (mut this.value)}}
  @suggestCompletions={{this.suggestCompletions}}
  as |editor|
>
  <editor.completion-tooltip as |suggestion|>
    Caption:
    {{suggestion.caption}}
  </editor.completion-tooltip>
</EmberAce>

<pre>{{this.value}}</pre>

<label>
  <input
    type='checkbox'
    checked={{this.highlightActiveLine}}
    {{on 'change' (fn this.syncInputValue 'highlightActiveLine')}}
  />
  highlightActiveLine
</label>

<label>
  <input
    type='checkbox'
    checked={{this.showPrintMargin}}
    {{on 'change' (fn this.syncInputValue 'showPrintMargin')}}
  />
  showPrintMargin
</label>

<label>
  <input
    type='checkbox'
    checked={{this.readOnly}}
    {{on 'change' (fn this.syncInputValue 'readOnly')}}
  />
  readOnly
</label>

<label>
  <input
    type='checkbox'
    checked={{this.useSoftTabs}}
    {{on 'change' (fn this.syncInputValue 'useSoftTabs')}}
  />
  useSoftTabs
</label>

<label>
  <input
    type='checkbox'
    checked={{this.useWrapMode}}
    {{on 'change' (fn this.syncInputValue 'useWrapMode')}}
  />
  useWrapMode
</label>

<label>
  <input
    type='checkbox'
    checked={{this.showInvisibles}}
    {{on 'change' (fn this.syncInputValue 'showInvisibles')}}
  />
  showInvisibles
</label>

<label>
  <input
    type='checkbox'
    checked={{this.showGutter}}
    {{on 'change' (fn this.syncInputValue 'showGutter')}}
  />
  showGutter
</label>

<label>
  <select {{on 'change' (fn this.syncInputValue 'theme')}}>
    {{#each this.themes as |theme|}}
      <option value={{theme}}>{{theme}}</option>
    {{/each}}
  </select>
  theme
</label>

<label>
  <input
    type='number'
    value={{this.tabSize}}
    {{on 'change' (fn this.syncInputValue 'tabSize')}}
  />
  tabSize
</label>

<h3>Overlay</h3>
{{! template-lint-disable no-inline-styles }}
<div style='display: flex; flex-flow: column'>
  <label>
    text
    <input
      type='text'
      value={{this.overlayText}}
      {{on 'input' (fn this.syncInputValue 'overlayText')}}
    />
  </label>

  <label>
    type
    <select {{on 'change' (fn this.syncInputValue 'overlayType')}}>
      <option value='error'>error</option>
      <option value='warning' selected>warning</option>
      <option value='info'>info</option>
    </select>
  </label>

  <label>
    start row
    <input
      type='number'
      value={{this.overlayStartRow}}
      {{on 'input' (fn this.syncInputValue 'overlayStartRow')}}
    />
  </label>

  <label>
    start column
    <input
      type='number'
      value={{this.overlayStartCol}}
      {{on 'input' (fn this.syncInputValue 'overlayStartCol')}}
    />
  </label>

  <label>
    end row
    <input
      type='number'
      value={{this.overlayEndRow}}
      {{on 'input' (fn this.syncInputValue 'overlayEndRow')}}
    />
  </label>

  <label>
    end column
    <input
      type='number'
      value={{this.overlayEndCol}}
      {{on 'input' (fn this.syncInputValue 'overlayEndCol')}}
    />
  </label>
</div>