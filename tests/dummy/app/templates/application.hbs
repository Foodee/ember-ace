{{page-title 'Dummy'}}

<h2 id='title'>Welcome to Ember</h2>

{{#ember-ace
  lines=10
  value=this.value
  highlightActiveLine=this.highlightActiveLine
  showPrintMargin=this.showPrintMargin
  readOnly=this.readOnly
  tabSize=this.tabSize
  useSoftTabs=this.useSoftTabs
  useWrapMode=this.useWrapMode
  showInvisibles=this.showInvisibles
  showGutter=this.showGutter
  theme=this.theme
  overlays=this.overlays
  update=(action (mut this.value))
  suggestCompletions=(action 'suggestCompletions')
  as |editor|
}}
  {{#editor.completion-tooltip as |suggestion|}}
    Caption:
    {{suggestion.caption}}
  {{/editor.completion-tooltip}}
{{/ember-ace}}

<pre>{{this.value}}</pre>

<label>
  <input
    type='checkbox'
    checked={{this.highlightActiveLine}}
    onchange={{action (mut this.highlightActiveLine) value='target.checked'}}
  />
  highlightActiveLine
</label>

<label>
  <input
    type='checkbox'
    checked={{this.showPrintMargin}}
    onchange={{action (mut this.showPrintMargin) value='target.checked'}}
  />
  showPrintMargin
</label>

<label>
  <input
    type='checkbox'
    checked={{this.readOnly}}
    onchange={{action (mut this.readOnly) value='target.checked'}}
  />
  readOnly
</label>

<label>
  <input
    type='checkbox'
    checked={{this.useSoftTabs}}
    onchange={{action (mut this.useSoftTabs) value='target.checked'}}
  />
  useSoftTabs
</label>

<label>
  <input
    type='checkbox'
    checked={{this.useWrapMode}}
    onchange={{action (mut this.useWrapMode) value='target.checked'}}
  />
  useWrapMode
</label>

<label>
  <input
    type='checkbox'
    checked={{this.showInvisibles}}
    onchange={{action (mut this.showInvisibles) value='target.checked'}}
  />
  showInvisibles
</label>

<label>
  <input
    type='checkbox'
    checked={{this.showGutter}}
    onchange={{action (mut this.showGutter) value='target.checked'}}
  />
  showGutter
</label>

<label>
  <select onchange={{action (mut this.theme) value='target.value'}}>
    {{#each this.themes as |theme|}}
      <option value={{theme}}>{{theme}}</option>
    {{/each}}
  </select>
  theme
</label>

<label>
  <input
    type='number'
    value={{this.tabSize}}
    onchange={{action (mut this.tabSize) value='target.value'}}
  />
  tabSize
</label>

<h3>Overlay</h3>
<div style='display: flex; flex-flow: column'>
  <label>
    text
    <input
      type='text'
      value={{this.overlay.text}}
      oninput={{action (mut this.overlay.text) value='target.value'}}
    />
  </label>

  <label>
    type
    <select onchange={{action (mut this.overlay.type) value='target.value'}}>
      <option value='error'>error</option>
      <option value='warning' selected>warning</option>
      <option value='info'>info</option>
    </select>
  </label>

  <label>
    start row
    <input
      type='number'
      value={{this.overlay.range.start.row}}
      oninput={{action (mut this.overlay.range.start.row) value='target.value'}}
    />
  </label>

  <label>
    start column
    <input
      type='number'
      value={{this.overlay.range.start.column}}
      oninput={{action (mut this.overlay.range.start.column) value='target.value'}}
    />
  </label>

  <label>
    end row
    <input
      type='number'
      value={{this.overlay.range.end.row}}
      oninput={{action (mut this.overlay.range.end.row) value='target.value'}}
    />
  </label>

  <label>
    end column
    <input
      type='number'
      value={{this.overlay.range.end.column}}
      oninput={{action (mut this.overlay.range.end.column) value='target.value'}}
    />
  </label>
</div>